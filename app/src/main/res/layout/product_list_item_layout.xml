<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="content"
            type="com.example.shoppingcart.productlist.CartProductList" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutProduct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <ImageView
            android:id="@+id/imageViewProductImage"
            android:layout_width="140dp"
            android:layout_height="150dp"
            android:src="@drawable/ic_p1"
            android:layout_margin="8dp"
            android:background="@drawable/custom_product_border"
            android:padding="16dp"
            listImage="@{content}"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/textViewProductCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:textSize="24sp"
            android:text="@{content.category}"
            android:fontFamily="@font/montserrat_bold"
            app:layout_constraintStart_toEndOf="@id/imageViewProductImage"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Tee" />

        <TextView
            android:id="@+id/textViewProductName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:textSize="28sp"
            android:textColor="@color/black"
            android:text="@{content.name}"
            android:fontFamily="@font/montserrat_bold"
            app:layout_constraintStart_toEndOf="@id/imageViewProductImage"
            app:layout_constraintTop_toBottomOf="@id/textViewProductCategory"
            tools:text="Flash T-Shirt" />

        <TextView
            android:id="@+id/textViewProductPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:textSize="28sp"
            android:textColor="@color/black"
            listPrice="@{content.price}"
            android:fontFamily="@font/montserrat_bold"
            app:layout_constraintBottom_toBottomOf="@id/imageViewProductImage"
            app:layout_constraintStart_toEndOf="@id/imageViewProductImage"
            tools:text="$75" />

        <Button
            android:id="@+id/buttonAddProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add"
            android:drawableEnd="@drawable/ic_baseline_add_24"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:fontFamily="@font/montserrat_bold"
            app:layout_constraintTop_toTopOf="@id/textViewProductPrice"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            android:layout_margin="16dp"
            app:layout_constraintTop_toBottomOf="@id/imageViewProductImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>