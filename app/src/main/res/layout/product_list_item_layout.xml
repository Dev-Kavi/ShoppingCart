<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="content"
            type="com.example.shoppingcart.productlist.CartProductList" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp">

            <ImageView
                android:id="@+id/imageViewProductImage"
                style="@style/product_list_item_product_image"
                listImage="@{content}"
                android:src="@drawable/ic_p1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/textViewProductCategory"
                style="@style/product_list_item_product_category"
                android:text="@{content.category}"
                app:layout_constraintStart_toEndOf="@id/imageViewProductImage"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Tee" />

            <TextView
                android:id="@+id/textViewProductName"
                style="@style/product_list_item_product_name"
                android:text="@{content.name}"
                app:layout_constraintStart_toEndOf="@id/imageViewProductImage"
                app:layout_constraintTop_toBottomOf="@id/textViewProductCategory"
                tools:text="Flash T-Shirt" />

            <TextView
                android:id="@+id/textViewProductPrice"
                style="@style/product_list_item_product_price"
                listPrice="@{content.price}"
                app:layout_constraintBottom_toBottomOf="@id/imageViewProductImage"
                app:layout_constraintStart_toEndOf="@id/imageViewProductImage"
                tools:text="$75" />

            <Button
                android:id="@+id/buttonAddProduct"
                style="@style/product_list_item_product_button_add"
                android:text="@string/product_list_item_add"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/textViewProductPrice" />

            <View
                style="@style/product_list_item_product_divider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imageViewProductImage" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>